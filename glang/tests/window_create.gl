main_field[640000]
tmp_field[640000]

function field_init() {
  x = 0
  while (x < WIDTH * HEIGHT) {
    main_field[x] = get_random_val()
    x = x + 1
  }
  return 0
}

function main() {
  true = 1
  field_init()
  graph_init()
  zero = 0
  while (true == 1) {
    window_clear(zero, zero, zero)
    draw_field() 
    swap() 
    flush()
  }
  return 0
}